<?xml version="1.0"?>
<ruleset name="COINS">
 <description>The COINS coding standard: PSR-2 with Zend Naming.</description>

 <!-- 2. General -->

 <!-- 2.1 Basic Coding Standard -->

 <!-- Include the whole PSR-2 standard -->
 <rule ref="PSR2"/>
 <!-- Include the naming conventions from Zend -->
 <rule ref="Zend.NamingConventions.ValidVariableName"/>
 <!-- Set warning limit at 80 chararcters instead of PSR-2 default of 120-->
 <rule ref="Generic.Files.LineLength">
  <properties>
   <property name="lineLimit" value="80"/>
   <property name="absoluteLineLimit" value="120"/>
  </properties>
 </rule>
</ruleset>
